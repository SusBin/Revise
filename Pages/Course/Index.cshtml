@page
@model Revise.Pages.Course.IndexModel
@{
    ViewData["Title"] = "Courses";
}

<div class="row">
    @foreach (var course in Model.Courses)
    {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@course.Value</h5>
                    <a href="/Question/Index/@course.Key" class="btn btn-primary">Go to Questions</a>
                </div>
            </div>
        </div>
    }
</div>

