@page "{id:int}"
@model Revise.Pages.Question.EditModel
@{
}
<form method="post">
    <input type="hidden" name="Question.Id" value="@Model.Question.Id" />

    <label for="question">Question:</label>
    <input id="question" name="Question.Question" value="@Model.Question.Question" />

    @for (int i = 0; i < Model.Question.Answers.Count; i++)
    {
        <div>
            <label for="answer">Answer @i:</label>
            <input id="answer" name="Question.Answers[@i].Text" value="@Model.Question.Answers[i].Text" />
            <label for="isCorrect">Is Correct:</label>
            <input type="checkbox" id="isCorrect" name="Question.Answers[@i].IsCorrect" value="true" @(Model.Question.Answers[i].IsCorrect ? "checked" : "") />
        </div>
    }


    <label for="topic">Topic:</label>
    <input id="topic" name="Question.Topic" value="@Model.TopicName" />

    <button type="submit">Update Question</button>
</form>
